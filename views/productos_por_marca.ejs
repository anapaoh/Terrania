<%- include('includes/_header') %>

<link rel="stylesheet" href="/css/producto_marca.css" />

<section class="section-block productos-section fade-in">
  <h2 class="section-title mb-4">Productos de <%= marca.nombre %></h2>
  <div class="container px-4">

    <% const tipos = ['Alimentos', 'Bebidas', 'Herbolaria', 'Ecotecnias', 'Textiles']; %>

    <% tipos.forEach(tipo => { %>
      <% const productosTipo = productos.filter(p => p.tipo === tipo); %>
      <% if (productosTipo.length > 0) { %>
        <h3 class="mt-5 mb-3 text-success fw-bold border-bottom pb-2"><%= tipo %></h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% productosTipo.forEach(producto => { %>
            <div class="col">
              <div class="card h-100 shadow-sm border-0 position-relative">
                <div class="producto-img-top" style="background-image: url('/images/productos/<%= producto.id_producto %>.png'); height: 200px; background-size: cover; background-position: center;"></div>
                <div class="card-body">
                  <h5 class="card-title text-success fw-bold"><%= producto.nombre %></h5>
                  <p class="card-text text-muted"><%= producto.descripcion %></p>
                  <button 
                    class="btn btn-cta btn-agregar-carrito" 
                    type="button" 
                    data-bs-toggle="offcanvas" 
                    data-bs-target="#offcanvasCompra"
                    data-id="<%= producto.id_producto %>"
                    data-nombre="<%= producto.nombre %>"
                    data-precio="<%= producto.precio_base || producto.precio %>"
                    data-descripcion="<%= producto.descripcion %>"
                    data-imagen="background-image: url('/images/productos/<%= producto.id_producto %>.png');"
                    <% if (producto.variantes && producto.variantes.length > 0) { %>
                      data-tienevariante="true"
                      data-variantes='<%- JSON.stringify(producto.variantes) %>'
                    <% } else { %>
                      data-tienevariante="false"
                    <% } %>
                  >
                    <i class="bi bi-cart"></i>
                  </button>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    <% }) %>
  </div>
</section>

<script src="/js/productos.js"></script>
<%- include('includes/_footer') %>